<!doctype html>
<html lang="{{ request.locale.iso_code }}" dir="{{ request.locale.text_direction }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="{{ settings.colors_primary }}">
  
  <title>{{ shop.name }} - {{ 'general.password.opening_soon' | t | default: 'Opening Soon' }}</title>

  {{ content_for_header }}

  {%- render 'css-variables' -%}
  {{ 'app.css' | asset_url | stylesheet_tag }}
  
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.8/dist/cdn.min.js" defer></script>
  
  {%- if request.locale.text_direction == 'rtl' -%}
    <link rel="stylesheet" href="{{ 'rtl.css' | asset_url }}">
  {%- endif -%}
</head>
<body class="min-h-screen bg-stone-100">
  {{ content_for_layout }}
  
  <footer class="fixed bottom-4 left-0 right-0 text-center">
    <p class="text-[10px] uppercase tracking-widest text-stone-400">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.password.powered_by' | t | default: 'Powered by Shopify' }}
    </p>
  </footer>
</body>
</html>
