{%- comment -%}
  Wishlist Button Snippet
  Usage: {% render 'wishlist-button', product: product %}
{%- endcomment -%}

{%- if product -%}
<button
  type="button"
  class="wishlist-btn"
  data-wishlist-toggle="{{ product.handle }}"
  aria-label="{{ 'products.product.add_to_wishlist' | t | default: 'Add to wishlist' }}"
  aria-pressed="false"
>
  <span class="wishlist-btn__icon">
    <svg class="wishlist-btn__icon--empty" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
    </svg>
    <svg class="wishlist-btn__icon--filled" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
    </svg>
  </span>
  <span class="visually-hidden">{{ 'products.product.add_to_wishlist' | t | default: 'Add to wishlist' }}</span>
</button>

<style>
  .wishlist-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text, #1c1917);
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .wishlist-btn:hover {
    transform: scale(1.1);
  }

  .wishlist-btn__icon--filled {
    display: none;
    color: #ef4444;
  }

  .wishlist-btn.is-active .wishlist-btn__icon--empty {
    display: none;
  }

  .wishlist-btn.is-active .wishlist-btn__icon--filled {
    display: block;
  }

  .wishlist-btn:focus-visible {
    outline: 2px solid var(--color-accent, #78716c);
    outline-offset: 2px;
  }
</style>
{%- endif -%}
