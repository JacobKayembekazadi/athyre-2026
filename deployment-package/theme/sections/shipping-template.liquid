{% schema %}
{
  "name": "Shipping Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "1", "label": "Light" },
        { "value": "2", "label": "Dark" },
        { "value": "3", "label": "Accent" }
      ],
      "default": "1"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Logistics"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shipping Rituals"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Each offering is prepared with intention and dispatched from our sanctuary."
    },
    {
      "type": "text",
      "id": "methods_heading",
      "label": "Methods section heading",
      "default": "Shipping Methods"
    },
    {
      "type": "text",
      "id": "timeline_heading",
      "label": "Timeline section heading",
      "default": "Order Timeline"
    }
  ],
  "blocks": [
    {
      "type": "method",
      "name": "Shipping Method",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Standard"
        },
        {
          "type": "text",
          "id": "time",
          "label": "Delivery time",
          "default": "3-5 Business Days"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "Complimentary"
        }
      ]
    },
    {
      "type": "step",
      "name": "Timeline Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Order Received"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "We confirm your order via email immediately."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shipping Page",
      "blocks": [
        {
          "type": "method",
          "settings": { "title": "Standard", "time": "3-5 Business Days", "price": "Complimentary" }
        },
        {
          "type": "method",
          "settings": { "title": "Expedited", "time": "2 Business Days", "price": "$25.00" }
        },
        {
          "type": "method",
          "settings": { "title": "Global", "time": "7-14 Business Days", "price": "Calculated at Checkout" }
        },
        {
          "type": "step",
          "settings": { "title": "Order Received", "description": "We confirm your order via email immediately." }
        },
        {
          "type": "step",
          "settings": { "title": "Preparation", "description": "Your items are inspected and wrapped in our signature packaging." }
        },
        {
          "type": "step",
          "settings": { "title": "Departure", "description": "Carrier collects the package. Tracking number is sent to you." }
        }
      ]
    }
  ]
}
{% endschema %}

{%- assign methods = section.blocks | where: "type", "method" -%}
{%- assign steps = section.blocks | where: "type", "step" -%}

<div class="color-scheme-{{ section.settings.color_scheme }} pt-32 pb-24 px-8 max-w-7xl mx-auto min-h-screen">

  {%- comment -%} HERO {%- endcomment -%}
  <section class="text-center mb-32">
    {% if section.settings.label != blank %}
      <span class="text-[10px] uppercase tracking-[0.4em] text-stone-400 font-bold block mb-4">{{ section.settings.label }}</span>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h1 class="text-4xl md:text-5xl font-light tracking-tight uppercase mb-8">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="text-stone-500 text-sm leading-loose max-w-2xl mx-auto">{{ section.settings.description }}</p>
    {% endif %}
  </section>

  {%- comment -%} SHIPPING METHODS {%- endcomment -%}
  {% if methods.size > 0 %}
    {% if section.settings.methods_heading != blank %}
      <h2 class="text-[10px] uppercase tracking-[0.3em] opacity-60 mb-10 text-center">{{ section.settings.methods_heading }}</h2>
    {% endif %}
    <section class="grid md:grid-cols-{{ methods.size | at_most: 4 }} gap-8 mb-32">
      {% for block in methods %}
        <div class="border border-stone-200 p-8 hover:border-stone-900 transition-colors" {{ block.shopify_attributes }}>
          {% if block.settings.title != blank %}
            <h3 class="text-[10px] uppercase tracking-[0.3em] font-black mb-4">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.time != blank %}
            <p class="text-[11px] text-stone-500 mb-4">{{ block.settings.time }}</p>
          {% endif %}
          {% if block.settings.price != blank %}
            <span class="text-[10px] font-bold">{{ block.settings.price }}</span>
          {% endif %}
        </div>
      {% endfor %}
    </section>
  {% endif %}

  {%- comment -%} TIMELINE {%- endcomment -%}
  {% if steps.size > 0 %}
    {% if section.settings.timeline_heading != blank %}
      <h2 class="text-[10px] uppercase tracking-[0.3em] opacity-60 mb-10 text-center">{{ section.settings.timeline_heading }}</h2>
    {% endif %}
    <section class="max-w-3xl mx-auto border-l border-stone-200 pl-12 space-y-12">
      {% for block in steps %}
        <div class="relative" {{ block.shopify_attributes }}>
          <span class="absolute -left-[54px] top-0 w-3 h-3 {% if forloop.first %}bg-stone-900{% else %}bg-stone-200{% endif %} rounded-full ring-4 ring-white"></span>
          <span class="text-[9px] uppercase tracking-widest text-stone-400 block mb-2">Step {{ forloop.index | prepend: '00' | slice: -2, 2 }}</span>
          {% if block.settings.title != blank %}
            <h3 class="text-xl font-serif italic mb-2">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="text-sm text-stone-500">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </section>
  {% endif %}

</div>
