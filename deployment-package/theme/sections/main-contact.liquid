{% schema %}
{
  "name": "Contact Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "1",
          "label": "Light"
        },
        {
          "value": "2",
          "label": "Dark"
        },
        {
          "value": "3",
          "label": "Accent"
        }
      ],
      "default": "1"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Support"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Connect With Council"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Our team is here to support your journey."
    },
    {
      "type": "header",
      "content": "FAQ Section"
    },
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQ heading",
      "default": "Common Questions"
    },
    {
      "type": "header",
      "content": "Contact Form"
    },
    {
      "type": "text",
      "id": "form_heading",
      "label": "Form heading",
      "default": "Send a Message"
    },
    {
      "type": "text",
      "id": "form_success",
      "label": "Success message",
      "default": "Message sent successfully."
    },
    {
      "type": "text",
      "id": "form_button",
      "label": "Submit button text",
      "default": "Send Message"
    }
  ],
  "blocks": [
    {
      "type": "contact_card",
      "name": "Contact Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Order Support"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "For help with current orders."
        },
        {
          "type": "text",
          "id": "contact_info",
          "label": "Contact info (email or phone)",
          "default": "support@athyre.com"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Where is my order?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Orders typically ship within 1-2 business days."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Page",
      "blocks": [
        {
          "type": "contact_card",
          "settings": {
            "title": "Order Support",
            "description": "For help with current orders.",
            "contact_info": "support@athyre.com"
          }
        },
        {
          "type": "contact_card",
          "settings": {
            "title": "Wholesale",
            "description": "Partner with us.",
            "contact_info": "partners@athyre.com"
          }
        },
        {
          "type": "contact_card",
          "settings": {
            "title": "Press",
            "description": "Share our story.",
            "contact_info": "press@athyre.com"
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "Where is my order?",
            "answer": "Check your email for tracking info, or visit your account page."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "What is your return policy?",
            "answer": "We accept returns within 30 days. Items must be unworn with tags attached."
          }
        }
      ]
    }
  ]
}
{% endschema %}

{%- assign contact_cards = section.blocks | where: "type", "contact_card" -%}
{%- assign faq_items = section.blocks | where: "type", "faq" -%}

<div class="color-scheme-{{ section.settings.color_scheme }} pt-32 pb-24 px-8 max-w-7xl mx-auto min-h-screen">

  {%- comment -%} HERO {%- endcomment -%}
  <section class="text-center mb-32">
    {% if section.settings.label != blank %}
      <span class="text-[10px] uppercase tracking-[0.4em] text-stone-400 font-bold block mb-4">{{ section.settings.label }}</span>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h1 class="text-4xl md:text-5xl font-light tracking-tight uppercase mb-8">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="text-stone-500 text-sm leading-loose max-w-2xl mx-auto">{{ section.settings.description }}</p>
    {% endif %}
  </section>

  {%- comment -%} CONTACT CARDS {%- endcomment -%}
  {% if contact_cards.size > 0 %}
    <section class="grid md:grid-cols-{{ contact_cards.size | at_most: 4 }} gap-8 mb-32">
      {% for block in contact_cards %}
        <div class="bg-stone-50 p-12 text-center group hover:bg-stone-900 hover:text-white transition-all duration-500" {{ block.shopify_attributes }}>
          {% if block.settings.title != blank %}
            <h3 class="text-[10px] uppercase tracking-[0.3em] font-black mb-4">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="text-[11px] text-stone-500 mb-8 group-hover:text-stone-400">{{ block.settings.description }}</p>
          {% endif %}
          {% if block.settings.contact_info != blank %}
            {%- if block.settings.contact_info contains '@' -%}
              <a href="mailto:{{ block.settings.contact_info }}" class="text-[10px] font-bold border-b border-stone-200 pb-1 group-hover:border-stone-700">{{ block.settings.contact_info }}</a>
            {%- elsif block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="text-[10px] font-bold border-b border-stone-200 pb-1 group-hover:border-stone-700">{{ block.settings.contact_info }}</a>
            {%- else -%}
              <span class="text-[10px] font-bold">{{ block.settings.contact_info }}</span>
            {%- endif -%}
          {% endif %}
        </div>
      {% endfor %}
    </section>
  {% endif %}

  {%- comment -%} FAQ & FORM {%- endcomment -%}
  <section class="grid lg:grid-cols-2 gap-20 mb-32">
    {%- comment -%} FAQ {%- endcomment -%}
    {% if faq_items.size > 0 %}
      <div>
        {% if section.settings.faq_heading != blank %}
          <h2 class="text-[11px] uppercase tracking-[0.6em] text-stone-400 font-black mb-12">{{ section.settings.faq_heading }}</h2>
        {% endif %}
        <div class="space-y-4">
          {% for block in faq_items %}
            <details class="border-b border-stone-100 group" {{ block.shopify_attributes }}>
              <summary class="w-full py-6 flex justify-between items-center text-left hover:text-stone-600 transition-colors cursor-pointer list-none">
                <span class="text-[11px] uppercase tracking-[0.2em] font-bold pr-8">{{ block.settings.question }}</span>
                <svg class="w-4 h-4 flex-shrink-0 transition-transform group-open:rotate-45" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 5v14M5 12h14"/></svg>
              </summary>
              <div class="text-stone-500 text-sm leading-relaxed pb-6">
                {{ block.settings.answer }}
              </div>
            </details>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {%- comment -%} FORM {%- endcomment -%}
    <div class="bg-white border border-stone-100 p-12 shadow-xl relative overflow-hidden">
      {% if section.settings.form_heading != blank %}
        <h2 class="text-2xl font-serif italic mb-8">{{ section.settings.form_heading }}</h2>
      {% endif %}
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <p class="text-green-500 text-sm mb-4">{{ section.settings.form_success }}</p>
        {% endif %}
        {% if form.errors %}
          <div class="text-red-500 text-sm mb-4">{{ form.errors | default_errors }}</div>
        {% endif %}
        <div class="grid grid-cols-2 gap-8 mb-8">
          <input type="text" name="contact[first_name]" placeholder="NAME" class="w-full border-b border-stone-200 py-2 focus:outline-none focus:border-stone-900 text-[10px] uppercase tracking-widest" required>
          <input type="text" name="contact[order_number]" placeholder="ORDER # (OPTIONAL)" class="w-full border-b border-stone-200 py-2 focus:outline-none focus:border-stone-900 text-[10px] uppercase tracking-widest">
        </div>
        <div class="mb-8">
          <input type="email" name="contact[email]" placeholder="EMAIL" class="w-full border-b border-stone-200 py-2 focus:outline-none focus:border-stone-900 text-[10px] uppercase tracking-widest" required>
        </div>
        <div class="mb-8">
          <textarea name="contact[body]" rows="4" placeholder="MESSAGE" class="w-full border-b border-stone-200 py-2 focus:outline-none focus:border-stone-900 text-[10px] uppercase tracking-widest resize-none" required></textarea>
        </div>
        <button type="submit" class="w-full bg-stone-900 text-white py-4 text-[10px] tracking-[0.3em] font-black uppercase hover:bg-stone-800 transition-colors shadow-lg">
          {{ section.settings.form_button }}
        </button>
      {% endform %}
    </div>
  </section>

</div>
