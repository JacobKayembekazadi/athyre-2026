{% schema %}
{
  "name": "Vision Timeline",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "The Path"
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Timeline Event",
      "settings": [
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "2024"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The Launch"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Athyre opens its doors to the world."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vision Timeline",
      "blocks": [
        {
          "type": "event",
          "settings": {
            "year": "2022",
            "title": "The Inception",
            "description": "Concept born in a quiet room."
          }
        },
        {
          "type": "event",
          "settings": {
            "year": "2023",
            "title": "First Material",
            "description": "Sourcing the perfect sanctuary fabric."
          }
        },
        {
          "type": "event",
          "settings": {
            "year": "2024",
            "title": "The Launch",
            "description": "Athyre opens its doors to the world."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="mb-40 overflow-hidden">
  {% if section.settings.heading != blank %}
    <h2 class="text-[11px] uppercase tracking-[0.6em] text-stone-400 font-black mb-12 px-8">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="flex gap-16 overflow-x-auto pb-12 px-8 scrollbar-hide snap-x">
    {% for block in section.blocks %}
      <div class="min-w-[300px] border-l-2 border-stone-200 pl-8 snap-start">
        <span class="text-4xl font-light text-stone-200 mb-4 block">{{ block.settings.year }}</span>
        <h3 class="text-xl font-serif italic mb-2">{{ block.settings.title }}</h3>
        <p class="text-[11px] uppercase tracking-widest text-stone-500">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>
