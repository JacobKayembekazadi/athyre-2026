{% schema %}
{
  "name": "Image Hero",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "1",
      "options": [
        { "value": "1", "label": "Scheme 1 (Light)" },
        { "value": "2", "label": "Scheme 2 (Dark)" },
        { "value": "3", "label": "Scheme 3 (Accent)" }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Sanctuary"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Collection 01"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Discover"
    }
  ],
  "presets": [
    {
      "name": "Image Hero"
    }
  ]
}
{% endschema %}

<section class="color-scheme-{{ section.settings.color_scheme }} relative h-[80vh] min-h-[500px] flex items-center justify-center overflow-hidden bg-stone-100">

    <div class="absolute inset-0 z-0">
        {% if section.settings.image %}
            <picture>
                <source media="(max-width: 767px)" srcset="{{ section.settings.image_mobile | default: section.settings.image | image_url: width: 800 }}">
                {{ section.settings.image | image_url: width: 2000 | image_tag: class: 'w-full h-full object-cover', loading: 'eager' }}
            </picture>
        {% else %}
             {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover opacity-50 grayscale' }}
        {% endif %}
        <div class="absolute inset-0 bg-stone-900/20"></div>
    </div>

    <div class="relative z-10 text-center text-white mix-blend-difference px-8">
        <span class="text-[10px] uppercase tracking-[0.4em] font-bold block mb-4 animate-in fade-in slide-in-from-bottom-4 duration-1000">{{ section.settings.subheading }}</span>
        <h1 class="text-5xl md:text-8xl font-light tracking-tighter uppercase mb-8 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300 leading-none">{{ section.settings.heading }}</h1>
        
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="inline-block px-12 py-4 border border-white/20 hover:bg-white hover:text-stone-900 transition-all duration-500 text-[10px] uppercase tracking-[0.3em] font-black animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-500 backdrop-blur-sm">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
    </div>
</section>
