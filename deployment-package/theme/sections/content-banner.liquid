{% schema %}
{
  "name": "Content Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "1", "label": "Light" },
        { "value": "2", "label": "Dark" },
        { "value": "3", "label": "Accent" }
      ],
      "default": "3"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Image overlay opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 50,
      "unit": "%"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designed For Movement"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Every piece is crafted with intention, tested in motion, and built to honor the body.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    }
  ],
  "presets": [
    {
      "name": "Content Banner"
    }
  ]
}
{% endschema %}

{%- assign height_class = 'py-16 md:py-24' -%}
{%- if section.settings.height == 'small' -%}
  {%- assign height_class = 'py-12 md:py-16' -%}
{%- elsif section.settings.height == 'large' -%}
  {%- assign height_class = 'py-24 md:py-40' -%}
{%- endif -%}

<div class="color-scheme-{{ section.settings.color_scheme }} {{ height_class }} px-4 md:px-8 relative overflow-hidden">
  {% if section.settings.image %}
    <div class="absolute inset-0">
      {{ section.settings.image | image_url: width: 1920 | image_tag: class: 'w-full h-full object-cover', loading: 'lazy' }}
      <div class="absolute inset-0" style="background: rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }})"></div>
    </div>
  {% endif %}

  <div class="max-w-3xl mx-auto relative z-10 text-{{ section.settings.text_alignment }} {% if section.settings.image %}text-white{% endif %}">

    {% if section.settings.label != blank %}
      <p class="text-[10px] uppercase tracking-[0.3em] opacity-60 mb-4">{{ section.settings.label }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-5xl font-black tracking-tight uppercase mb-6">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="text-sm md:text-base opacity-80 leading-relaxed mb-8 max-w-xl {% if section.settings.text_alignment == 'center' %}mx-auto{% elsif section.settings.text_alignment == 'right' %}ml-auto{% endif %}">
        {{ section.settings.text }}
      </div>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="inline-block border {% if section.settings.image %}border-white text-white hover:bg-white hover:text-stone-900{% else %}border-current hover:bg-stone-900 hover:text-white{% endif %} px-8 py-3 text-[10px] uppercase tracking-[0.2em] font-bold transition-colors">
        {{ section.settings.button_label }}
      </a>
    {% endif %}

  </div>
</div>
