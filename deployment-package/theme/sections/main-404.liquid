{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "1",
      "options": [
        {
          "value": "1",
          "label": "Scheme 1 (Light)"
        },
        {
          "value": "2",
          "label": "Scheme 2 (Dark)"
        },
        {
          "value": "3",
          "label": "Scheme 3 (Accent)"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Not Found"
    },
    {
      "type": "richtext",
      "id": "message",
      "label": "Message",
      "default": "<p>The page you're looking for doesn't exist or has been moved.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Return Home"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}

<section class="color-scheme-{{ section.settings.color_scheme }} min-h-[70vh] flex items-center justify-center py-16 md:py-24 px-4 md:px-8">
  <div class="text-center max-w-lg">
    <p class="text-7xl md:text-9xl font-light text-stone-200 mb-6 md:mb-8">404</p>
    
    <h1 class="text-2xl md:text-3xl font-light uppercase tracking-tight mb-4 md:mb-6">
      {{ section.settings.heading }}
    </h1>
    
    <div class="prose prose-stone text-stone-500 mb-8 mx-auto">
      {{ section.settings.message }}
    </div>
    
    <a 
      href="{{ section.settings.button_link | default: routes.root_url }}"
      class="inline-block px-8 py-4 bg-stone-900 text-white text-[10px] uppercase tracking-widest font-bold hover:bg-stone-800 transition-colors"
    >
      {{ section.settings.button_label }}
    </a>
  </div>
</section>
